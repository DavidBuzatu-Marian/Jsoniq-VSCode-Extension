{
  "name": "jsoniq",
  "description": "JSONiq language features for Visual Studio Code",
  "author": "JSONiq Development Team",
  "license": "MIT",
  "version": "1.0.2",
  "publisher": "jsoniq-development-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidBuzatu-Marian/Jsoniq-LanguageServer"
  },
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "jsoniq",
        "extensions": [
          ".jq"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jsoniq",
        "scopeName": "source.jsoniq",
        "path": "./syntaxes/jsoniq.tmGrammar.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "local_storage",
        "superType": "storage",
        "description": "A template type for declaration coloring."
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "local_storage": [
            "storage.type"
          ]
        }
      }
    ],
    "semanticTokenModifiers": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "ts-node": "^10.9.2"
  }
}
